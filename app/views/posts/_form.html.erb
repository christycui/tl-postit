
<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <ul style="list-style: none;">
      <% @post.errors.full_messages.each do |msg| %>
      
       <li><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span><%= msg %></span>
      <% end %>
    </ul>
  </div>
<% end %>

<div class='well'>
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 8 %>

    <br/>
    <%= f.submit(@post.new_record? ? "Create post!" : "Update post!" , class: 'btn btn-primary')%>
  <% end %>
</div>