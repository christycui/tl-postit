<%= render 'shared/display_errors', obj: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :url %>
    <%= f.text_field :url %>

    <%= f.label :description %>
    <%= f.text_area :description, rows: 8 %>

    <br/>
    <%= f.submit(@post.new_record? ? "Create post!" : "Update post!" , class: 'btn btn-primary')%>
  <% end %>
</div>