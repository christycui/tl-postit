<% show_post ||= false %>


<div class='row'>
  <div class='span0 well text-center'>
        <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        <% end %>
    <% else %>
    <span class="glyphicon glyphicon-chevron-up"></span>
    <% end %>
    <br/>
        <span id='comment_<%= comment.id %>_vote'><%= comment.total_votes %></span>
    <br/>
    <% if logged_in? %>
        <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
        <% end %>
    <% else %>
    <span class="glyphicon glyphicon-chevron-down"></span>
    <% end %>
  </div>

  <div class='well span8'>
    <em><%= comment.body %></em>
    <% if show_post %>
    on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br/>
    <p>by <%= link_to comment.creator.username, user_path(comment.creator) %> on <%= format_time(comment.created_at) %></p>
  </div>
</div>