<% if obj.errors.any? %>
  <div class='alert alert-danger'>
    <p>Please fix the following error(s):</p>
    <ul style = "list-style: none;">
      <% obj.errors.full_messages.each do |msg| %>
        <li><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span><%= msg %></span>
      <% end %>
    </ul>
  </div>
<% end %>